<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.evosuite.plugins</groupId>
    <artifactId>evosuite-plugins</artifactId>
    <version>1.2.1-SNAPSHOT</version>
  </parent>

  <artifactId>evosuite-eclipse-plugin</artifactId>
  <packaging>pom</packaging>

  <profiles>
    <profile>
      <id>Java 8</id>
      <activation>
        <jdk>(,9)</jdk>
      </activation>
      <properties>
        <!-- Last version of Tycho that works with Java 8 -->
        <tycho-version>1.7.0</tycho-version>
        <eclipse-repo.url>http://download.eclipse.org/releases/photon</eclipse-repo.url>
      </properties>
    </profile>
    <profile>
      <id>Java 9+</id>
      <activation>
        <jdk>[9,)</jdk>
      </activation>
      <properties>
        <tycho-version>2.4.0</tycho-version>
        <eclipse-repo.url>http://download.eclipse.org/releases/2021-09</eclipse-repo.url>
      </properties>
    </profile>
  </profiles>

  <properties>
    <tycho-version>2.4.0</tycho-version>
    <eclipse-repo.url>http://download.eclipse.org/releases/2021-09</eclipse-repo.url>
  </properties>

  <repositories>
    <repository>
      <id>eclipse</id>
      <url>${eclipse-repo.url}</url>
      <layout>p2</layout>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <!-- enable tycho build extension -->
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>consider</pomDependencies>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86_64</arch>
            </environment>
            <environment>
              <os>win32</os>
              <ws>win32</ws>
              <arch>x86_64</arch>
            </environment>
            <environment>
              <os>macosx</os>
              <ws>cocoa</ws>
              <arch>x86_64</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>evosuite-eclipse-deps</module> 
    <module>evosuite-eclipse-core</module> 
    <module>evosuite-eclipse-feature</module> 
    <module>evosuite-eclipse-site</module> 
  </modules>
</project>
